                      <script>
                     function copyToClipboard(button) {
  const textToCopy = document.getElementById("myText").innerText;

  navigator.clipboard.writeText(textToCopy).then(() => {
    button.innerText = "Copied!";
  }).catch((error) => {
    alert("Error copying text to clipboard: " + error);
  });
}


                      </script>
