<style>
    .popup {
      display: none;
      position: fixed;
      top: 0;
      right: 0;
      width: 100%; /* adjust width as needed */
      height: 100%;
      background-color: rgb(83, 80, 80, 0.4);
      z-index: 999;
    }
  
    .popup-content {
      position: absolute;
      top: 50%;
      right: 35%;
      width: 400px;
      transform: translateY(-50%);
      background-color: white;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
      text-align: center;
    }
  
    .close {
      position: absolute;
      top: 10px;
      right: 10px;
      font-size: 20px;
      font-weight: bold;
      cursor: pointer;
    }
    
    /* Add the following styles to make the main div scrollable */
    .col-lg-4 {
      position: relative;
      overflow: auto;
    }
    
    /* close button  */
    .cart__discount .close {
      position: absolute;
      top: 10px;
      right: 10px;
     }
