      }.cpncpy{
        font-size: 15px;
      }
     }.cpnpercent{
      font-size: 12px;
      margin: 0 !important;
      margin-left: 10px!important;
      margin-top: 8px!important;
      font-weight: 800;
     }.minmaax{
