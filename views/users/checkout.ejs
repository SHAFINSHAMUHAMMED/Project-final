<%- include('../layouts/header.ejs') %>
<%- include('../layouts/commonhead.ejs',{session}) %>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>
    

        <section class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb__text">
                            <h4>Check Out</h4>
                            <div class="breadcrumb__links">
                                <a href="./index.html">Home</a>
                                <a href="./shop.html">Shop</a>
                                <span>Check Out</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Breadcrumb Section End -->

        <!-- Checkout Section Begin -->
        <section class="checkout spad d-flex">
            <div class="container">
                <div class="checkout__form">

                    <div class="row">

                        <div class="col-lg-8 col-md-6 ">



                            <div class="d-flex justify-content-end">
                                <a href="/address">
                                    <button type="submit">Select Address</button>
                                </a>

                            </div>
                            <h6 class="checkout__title">Billing Details</h6>
                            <form action="paymentPage" method="post">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <% if (addressCount==undefined) { %>
                                                <p>First Name<span>*</span></p>
                                                <input type="text" name="username" value="<%= address[0].username %>" placeholder="" required
                                                    minlength="2" />
                                                    <span class="error-message"></span>
                                                <% } else { %>
                                                    <p>First Name<span>*</span></p>
                                                    <input type="text" name="username"
                                                        value="<%=addressCount.username%>"  minlength="2" />
                                                    <span class="error-message"></span>
                                                    <% } %>
                                        </div>
                                    </div>
                                </div>

                                <div class="checkout__input">

                                    <p>Country<span>*</span></p>
                                    <input type="text" value="INDIA" readonly>

                                </div>
                                <div class="checkout__input">
                                    <% if (addressCount==undefined) { %>
                                        <p>Address<span>*</span></p>
                                        <input  name="address" id="inputOrgName" cols="30" rows="5"
                                            class="form-control " style="height: 100px;" value="<%= address[0].address %>"  placeholder=""
                                            required>
                                        <% } else { %>
                                            <p>Address<span>*</span></p>
                                            <input name="address" id="inputOrgName" cols="30" rows="5"
                                                class="form-control" value="<%= addressCount.address %>" >

                                            <% } %>
                                </div>
                                <div class="checkout__input">
                                    <% if (addressCount==undefined) { %>
                                        <p>Town/City<span>*</span></p>
                                        <input name="city" type="text" value="<%= address[0].city %> " placeholder="" required>
                                        <% } else { %>
                                            <p>Town/City<span>*</span></p>
                                            <input name="city" type="text" value="<%=addressCount.city%>" >
                                            <% } %>
                                </div>
                                <div class="checkout__input">
                                    <% if (addressCount==undefined) { %>
                                        <p>State<span>*</span></p>
                                        <input name="state" type="text" value="<%= address[0].state %>" placeholder="" required>
                                        <% } else { %>
                                            <p>State<span>*</span></p>
                                            <input name="state" type="text" value="<%=addressCount.state%>" >
                                            <% } %>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <% if (addressCount==undefined) { %>
                                                <p>Postcode / ZIP<span>*</span></p>
                                                <input name="zip" type="text" value="<%= address[0].zip %>" placeholder="" required>
                                                <% } else { %>
                                                    <p>Postcode / ZIP<span>*</span></p>
                                                    <input name="zip" type="text" value="<%=addressCount.zip%>" >
                                                    <% } %>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <% if (addressCount==undefined) { %>
                                                <p>Phone<span>*</span></p>
                                                <input name="phone" type="tel" value="<%= address[0].phone %>" placeholder="" minlength=10 maxlength=10 required>
                                                <% } else { %>
                                                    <p>Phone<span>*</span></p>
                                                    <input name="phone" type="tel" value="<%=addressCount.phone%> "minlength=10 >
                                                    <% } %>
                                        </div>
                                    </div>

                                </div>

                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <h4 class="order__title">Your order</h4>
                                <div class="checkout__order__products">Product <span>Total</span></div>
                                <% if (cart.item==undefined) { %>
                                    <% } else { %>
                                        <% let totalPrice=0 %>
                                            <%cart.item.forEach((item)=>{%>

                                                <ul class="checkout__total__products">
                                                    <li><img width="30px" height="30px"
                                                            src="/proImage/<%=item.product.image[0]%>" alt="">
                                                        <%=item.product.title%> <span>
                                                                <%=item.price * item.quantity%>
                                                            </span>
                                                    </li>
                                                </ul>
                                                <%})%>

                                                    <ul class="checkout__total__all">
                                                        <li class="text-success">Discount <span class="text-success">
                                                           - <%=cart.discount%>
                                                        </span></li>
                                                        <li>Total <span class="fs-5">
                                                                <%=cart.subtotal%>
                                                            </span></li>
                                                    </ul>
                                                    <% } %>
                                                        
                                                            
                                                            <button type="submit" class="site-btn">PROCEED TO
                                                                PAYMENTS</button>

                            </div>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </section>

       
<script>
    const usernameField = document.querySelector('input[name="username"]');
const usernameValue = usernameField.value;

// Check if the value has spaces
if (usernameValue.includes(' ')) {
  // Trim the value and update the input field
  const trimmedValue = usernameValue.trim();
  usernameField.value = trimmedValue;
}

// You can add the above code to an event listener, like 'blur' or 'submit',
// to check and trim the username field when the user leaves the field or submits the form.

</script>
        <%- include('../layouts/commonfooter.ejs',{session}) %>
        <%- include('../layouts/footer.ejs') %>